all:
	#########################################################
	#	 					 	#
	#	 	    BUILDING MGEN		 	#
	#						 	#
	#########################################################
	cd mgen-api && make all
	cd mgen-compiler && make all
	#########################################################
	#							#
	#	 	  DONE BUILDING MGEN		 	#
	#							#
	#########################################################

clean:	
	#########################################################
	#	 					 	#
	#	 	    CLEANING MGEN		 	#
	#	 					 	#
	#########################################################
	cd mgen-api && make clean
	cd mgen-compiler && make clean
	#########################################################
	#							#
	#	 	  DONE CLEANING MGEN		 	#
	#							#
	#########################################################

