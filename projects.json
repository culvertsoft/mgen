{
	"__COMMENT__": " This file is used for the nightly build script to specify what files should be uploaded. ",
	
	"def_files": {
		"java-assembly": [ 
			{ 
				"source": "target/%PROJECT-assembly-%VERSION.jar",
				"target": "%PROJECT-assembly-%VERSION.jar"
			}
		],
		"java": [
			{
				"source": "target/%PROJECT-%VERSION.jar",
				"target": "%PROJECT-%VERSION.jar"
			},
			{
				"source": "target/%PROJECT-%VERSION-javadoc.jar",
				"target": "%PROJECT-%VERSION-javadoc.jar"
			},
			{
				"source": "target/%PROJECT-%VERSION-sources.jar",
				"target": "%PROJECT-%VERSION-sources.jar"
			}
		],
		"javascript": [
			{
				"source": "src/main/javascript/mgen-lib.js",
				"target": "mgen.%VERSION.js"
			},
			{
				"source": "target/javascript/mgen-lib.js",
				"target": "mgen.%VERSION.min.js"
			}
		],
		"cpp": [
			{
				"source": "/src/main/cpp/mgen",
				"target": "include/mgen"
			}
		]
	},

	"path_to_projects": "./",

	"projects": {
		"mgen-api": {
			"def_files": "java"
		},
		"mgen-compiler": {
			"def_files": [ "java", "java-assembly" ]
		},
		"mgen-cppgenerator": {
			"def_files": "java"
		},
		"mgen-cpplib": {
			"def_files": "cpp"
		},
		"mgen-javascriptgenerator": {
			"def_files": "java"
		},
		"mgen-javascriptlib": {
			"def_files": "javascript"
		},
		"mgen-javagenerator": {
			"def_files": "java"
		},
		"mgen-javalib": {
			"def_files": "java"
		},
		"mgen-visualdesigner": {
			"def_files": [ "java", "java-assembly" ]
		}
	}
}
